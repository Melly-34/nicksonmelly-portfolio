    <script>
        // Initialize Lucide icons
        lucide.createIcons();

        // Set current year in footer
        document.getElementById('current-year').textContent = new Date().getFullYear();

        // 1. Mobile Menu Logic
        const mobileMenuButton = document.getElementById('mobile-menu-button');
        const mobileMenu = document.getElementById('mobile-menu');
        const menuIconOpen = document.getElementById('menu-icon-open');
        const menuIconClose = document.getElementById('menu-icon-close');

        function toggleMobileMenu() {
            const isMenuOpen = mobileMenu.classList.toggle('hidden');
            menuIconOpen.classList.toggle('hidden', !isMenuOpen);
            menuIconClose.classList.toggle('hidden', isMenuOpen);
        }

        mobileMenuButton.addEventListener('click', toggleMobileMenu);

        // Close mobile menu when a link is clicked
        mobileMenu.querySelectorAll('a').forEach(link => {
            link.addEventListener('click', () => {
                // Ensure menu is closed after click
                if (!mobileMenu.classList.contains('hidden')) {
                    toggleMobileMenu();
                }
            });
        });

        // 2. Contact Form Submission (Mock)
        const contactForm = document.getElementById('contact-form');
        const formMessage = document.getElementById('form-message');

        contactForm.addEventListener('submit', function(e) {
            e.preventDefault();
            
            // Disable button and show loading state
            const submitButton = contactForm.querySelector('button[type="submit"]');
            submitButton.innerHTML = '<div data-lucide="loader" class="w-5 h-5 animate-spin"></div> <span>Sending...</span>';
            lucide.createIcons(); // Re-render icons after changing content
            submitButton.disabled = true;

            // Simulate API call delay
            setTimeout(() => {
                // Mock success state
                submitButton.innerHTML = '<div data-lucide="check" class="w-5 h-5"></div> <span>Sent!</span>';
                
                // Show success message and reset form
                formMessage.classList.remove('hidden');
                contactForm.reset();

                // Reset button and message after a delay
                setTimeout(() => {
                    submitButton.innerHTML = '<div data-lucide="send" class="w-5 h-5"></div> <span>Send Message</span>';
                    lucide.createIcons();
                    submitButton.disabled = false;
                    formMessage.classList.add('hidden');
                }, 3000);

            }, 1500); // 1.5 second delay
        });
    </script>
